<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp" packages="">

  <Properties>
    <Property name="defaultFilename">logs/default.log</Property>
	<Property name="errorFilename">logs/errors.log</Property>
	<Property name="infoFilename">logs/info.log</Property>
	<Property name="annotationFilename">logs/annotations.log</Property>
  </Properties>
  <Appenders>
 	<File name="defaultAppender" fileName="${defaultFilename}">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>
	<File name="errorAppender" fileName="${errorFilename}">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>
	<File name="infoAppender" fileName="${infoFilename}">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>
	<File name="annotationAppender" fileName="${infoFilename}">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="all">
    	<AppenderRef ref="defaultAppender"/> 
    </Root>
	<Logger level="error" name="com.senla.ui.observer.ErrorLogger" additivity="true">
	<AppenderRef ref="errorAppender"/>
	</Logger>
	<Logger level="info" name="com.senla.ui.observer.InfoLogger" additivity="true">
	<AppenderRef ref="infoAppender"/>
	<Logger level="all" name="annotation.AnnotationHandler" additivity="true">
	<AppenderRef ref="annotationAppender"/>
	</Logger>
  </Loggers>
</Configuration>